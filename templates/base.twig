<head>

    {% if getPageTitle() %}
        <title>{{ getPageTitle() }}</title>
    {% endif %}

    {% if getPageDescription %}
        <meta name="description" content="{{ getPageDescription() }}" />
    {% endif %}

    <meta name="viewport" content="width=device-width, initial-scale=1">

    {% block styles %}
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" />
    {% endblock %}

</head>
<body>
    <!-- container -->
    <div class="container">

        {% block header %}
            <header>
                <p>Navigation - all</p>
                <nav>
                    {# Here is an example of getting the entire tree structure nav markup #}

                </nav>

                <p>Navigation - just top level</p>
                <nav>
                    {# Here is an example of getting just the top level nav items and not recursively going down the tree #}

                </nav>
            </header>
        {% endblock %}

        {% include 'parts/breadcrumbs.twig' %}



        {% block content %}
            Content
        {% endblock %}


        {% include 'parts/sidenav.twig' %}



        {% block footer %}
            <footer>
                FOOTER
            </footer>
        {% endblock %}

    </div>
    <!-- end container -->

    {% block scripts %}
        {# base scripts go here #}
    {% endblock %}
</body>
</html>