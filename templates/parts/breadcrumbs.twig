{% set breadcrumbs = getBreadcrumbs() %}

{% if current_page.breadcrumbs %}
    <div class="container">
        <nav class="breadcrumbs">
            {# Here is an example to get the breadcrumbs for a page (this will auto generate them based off the uri structure) #}
            <ol class="breadcrumb">
                <li><a href="/">Home</a></li>
                {% for breadcrumb in breadcrumbs %}
                    <li class="{% if breadcrumb.current %}active {% endif %}">
                        {% if breadcrumb.current %}
                            <span>{{ breadcrumb.title }}</span>
                        {% else %}
                            <a href="{{ breadcrumb.uri }}">{{ breadcrumb.title }}</a>
                        {% endif %}
                    </li>
                {% endfor %}
            </ol>
        </nav>
    </div>
{% endif %}