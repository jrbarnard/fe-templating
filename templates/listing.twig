{% extends 'base-with-side.twig' %}

{% block main %}
    {% if list %}
        <ul class="list-group">
            {% for item in list %}
                <li class="list-group-item">
                    <h3><a href="{{ item.link }}">{{ item.title }}</a></h3>
                    <p>{{ item.summary }}</p>
                </li>
            {% endfor %}
        </ul>
    {% endif %}
{% endblock %}